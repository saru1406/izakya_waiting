<table class="table table-responsive-sm table-borderless text-nowrap">
  <tr>
    <th>店舗名</th>
    <td><%= f.text_field :name, autofocus: true, placeholder: "店舗名 ××店" %></td>
  </tr>
  <tr>
    <th>外装画像</th>
    <td><%= f.file_field :image, accept: "image/*" %></td>
  </tr>
  <tr>
    <th>料理画像(最大3個)</th>
    <td><%= f.file_field :cooking_image, accept: "image/*", multiple: true %></td>
  </tr>
  <tr>
    <th>予算</th>
    <td><%= f.text_field :budget_min, placeholder: "0000" %>円 ～<%= f.text_field :budget_max, placeholder: "0000" %>円</td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address, placeholder: "東京都×××市×××区××町0-0", class: 'w-100' %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= f.text_field :telephone_number, placeholder: "00000000000" %></td>
  </tr>
  <tr>
    <th>タグ</th>
    <td>
      <!--登録済みのタグをチェックボックスで表示-->
      <%= f.collection_check_boxes(:tag_ids, tags, :id, :name) do |tag| %>
        <div class='form-check'>
          <%= tag.check_box class: 'form-check-input' %>
          <%= tag.text %>
        </div>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>空席情報</th>
    <td><%= f.select :seat_status, [["空きあり"], ["空きわずか"],["空き無し"]], include_blank: "選択して下さい" %></td>
  </tr>
  <tr>
    <th>営業時間</th>
    <td><%= f.text_field :business_hours, placeholder: "例 18:00~24:00" %></td>
  </tr>
  <tr>
    <th>定休日</th>
    <td><%= f.text_field :regular_holiday, placeholder: "例 火曜日" %></td>
  </tr>
  <tr>
    <th>禁煙・喫煙</th>
    <td><%= f.select :smoke_status, [["禁煙"], ["喫煙"]], include_blank: "選択して下さい" %></td>
  </tr>
  <tr>
    <th>チャージ</th>
    <td><%= f.text_field :service_charge, placeholder: "000" %>円</td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
  </tr>
  <tr>
    <th>掲載情報</th>
    <td>
      <%= f.radio_button :is_published, true %><%= f.label :is_published, "公開", value: true, class: "px-2" %>
      <%= f.radio_button :is_published, false %><%= f.label :is_published, "非公開", value: false, class: "px-2" %>
    </td>
  </tr>
</table>