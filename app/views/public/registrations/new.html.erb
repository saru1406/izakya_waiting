<div class="row">
  <div class="mx-auto col-11 col-sm-10 col-lg-8">
    <div class="my-4">
      <h4 class="col-3 bg-light text-center">新規会員登録</h4>
      <div class="text-danger">
        <%= render "public/shared/error_messages", resource: resource %>
      </div>
    </div>
    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
    <table class="table table-borderless text-nowrap">
      <tr>
        <th><%= f.label :"ニックネーム" %></th>
        <td><%= f.text_field :name, autofocus: true, placeholder: "ニックネーム" %></td>
      </tr>
      <tr>
        <th> <%= f.label :"メールアドレス" %></th>
        <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
      </tr>
      <tr>
        <th>
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
        </th>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th><%= f.label :"パスワード(確認用)" %></th>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>
    </table>
    <div class="actions m-4 text-center">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
    <% end %>
    <h5 class="col-4 bg-light">既に登録済みの方</h5>
    <p class="col-7"><%= render "public/shared/links" %>からログインしてください</p>
  </div>
</div>