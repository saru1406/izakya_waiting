<div class="row">
  <div class="col-4">

  </div>
  <div class="col-8">
    <h2 class="col-4 bg-light text-center">居酒屋一覧</h2>
    <% @stores.each do |store| %>
    <div class="pb-4">
      <table class="table-sm table-warning border">
        <tr>
          <th><%= image_tag '居酒屋', size: "200x200" %></th>
          <th class="text-right">
            店舗名:<br>
            予算:<br>
            レビュー数:<br>
            空席情報:<br>
            営業時間:<br>
            定休日:<br>
          </th>
          <td></td>
          <td style="width: 55%">
            <%= link_to store.name, store_path(store.id) %><br>
            ￥<%= store.budget_min %>円~￥<%= store.budget_max %>円<br>
            <br>
            <%= store.seat_status %><br>
            <%= store.business_hours %><br>
            <%= store.regular_holiday %><br>
          </td>
        </tr>
      </table>
    </div>
    <% end %>
  </div>
</div>