<div class="row">
  <div class="col-4">
    <div class="sticky-top">
      <%= render 'public/stores/sidebar', tag: @tag %>
    </div>
  </div>
  <div class="col-8">
    <h2 class="col-4 bg-light text-center">居酒屋一覧</h2>
    <% @stores.each do |store| %>
    <div class="pb-4">
      <%= link_to store_path(store.id), class: "text-decoration-none" do %>
      <table class="table-sm table-warning border text-dark">
        <tr>
          <th><%= image_tag store.get_image, size: "200x200" %></th>
          <th class="text-right">
            店舗名:<br>
            予算:<br>
            空席情報:<br>
            営業時間:<br>
            定休日:<br>
            レビュー数:
          </th>
          <td></td>
          <td style="width: 55%">
            <%= store.name %><br>
            ￥<%= store.budget_min %>円~￥<%= store.budget_max %>円<br>
            <%= store.seat_status %><br>
            <%= store.business_hours %><br>
            <%= store.regular_holiday %><br>
            <%= store.reviews.count %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
    <% end %>
  </div>
</div>