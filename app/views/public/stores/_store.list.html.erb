<div class="card mb-3 bg-light shadow text-nowrap" style="max-width: 100%;">
  <div class="row mx-0">
    <div class="col-lg-6 p-3 px-auto">
      <div class="card-image">
        <%= image_tag store.get_image, size: "280x280" %>
      </div>
    </div>
    <div class="col-lg-2 col-6 px-0 text-right">
      <div class="card-body px-0">
        <div class="card-text">
          <p>店舗名:</p>
          <p>予算:</p>
          <p>空席情報:</p>
          <p>営業時間:</p>
          <p>定休日:</p>
          <p>禁煙・喫煙:</p>
          <p>レビュー数:</p>
          <p>総合評価</p>
        </div>
      </div>
    </div>
    <div class="col-lg-4 col-6">
      <div class="card-body px-0">
        <div class="card-text">
          <p><%= store.name %></p>
          <p>￥<%= store.budget_min %>円~￥<%= store.budget_max %>円</p>
          <p><%= store.seat_status %></p>
          <p><%= store.business_hours %></p>
          <p><%= store.regular_holiday %></p>
          <p><%= store.smoke_status %></p>
          <p><%= store.reviews.count %>件</p>
          <p>
            <!--評価平均表示-->
            <div class="average-review-rating" data-score=<%= store.reviews.average(:star) %>></div>
          <script>
            $('.average-review-rating').empty();
            $('.average-review-rating').raty({
            readOnly: true,
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            score: function() {
              return $(this).attr('data-score')
            }
            });
          </script>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>