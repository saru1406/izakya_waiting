<div class="row pb-5">
  <div class="col-4">
    <%= render 'public/stores/sidebar', tags: @tags %>
  </div>
  <div class="col-8">
    <h2 class="col-7 bg-light text-center"><%= @store.name %>詳細</h2>
    <table class="table-sm table-warning border">
      <tr>
        <th><%= image_tag @store.get_image, size: "250x250" %></th>
        <th class="text-right">
          店舗名:<br>
          予算:<br>
          住所:<br>
          電話番号:<br>
          ジャンル:<br>
          空席情報:<br>
          営業時間:<br>
          定休日:<br>
          禁煙・喫煙:<br>
          チャージ料:<br>
        </th>
        <td></td>
        <td style="width: 43%">
          <%= @store.name %><br>
          ￥<%= @store.budget_min %>円~￥<%= @store.budget_max %>円<br>
          <%= @store.address %><br>
          <%= @store.telephone_number %><br>
          <% @store.tags.each do |tag| %>
            ・<%= tag.name %>
          <% end %><br>
          <%= @store.seat_status %><br>
          <%= @store.business_hours %><br>
          <%= @store.regular_holiday %><br>
          <%= @store.smoke_status %><br>
          <%= @store.service_charge %>円<br>
        </td>
      </tr>
    </table>
    <div class="bookmark<%= @store.id %> my-4">
    <%= render 'public/bookmarks/bookmark', store: @store %>
    </div>

    <h3 class="col-3 bg-light text-center">レビュー</h3>
    <% @reviews.each do |review| %>
      <table class="border border-warning mt-4">
        <tr>
          <td>
            <!-- 評価 -->
            <div id="star-rate<%= review.id%>"></div>
          </td>
          <!-- 評価javascript -->
          <script>
            $('#star-rate<%= review.id%>').empty();
            $('#star-rate<%= review.id%>').raty({
            size      : 36,
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            starHalf  : '<%= asset_path('star-half.png') %>',
            half      : true,
            readOnly: true,
            score: <%= review.star %>,
            });
          </script>
        </tr>
        <tr>
          <td class="text-right pr-3">
            <div class="favorite<%= review.id %>">
              <%= render 'public/favorites/favorite', store: @store, review: review %>
            </div>
            投稿者:<%= review.customer.name %>
            投稿日:<%= review.created_at.strftime('%Y/%m/%d') %>
          </td>
        </tr>
        <tr>
          <th style="width: 1%"><%= link_to review.title, store_review_path(@store,review.id) %></th>
        </tr>
        <tr>
          <!--コメントが100文字以上なら<もっと見る>を表示し、詳細リンク追加-->
          <%if review.body.length > 100 %>
          <td style="width: 1%">
            <%=safe_join(review.body.truncate(100).split("\n"),tag(:br))%>
            <%= link_to "<もっと見る>", store_review_path(@store,review.id) %>
          </td>
          <!--コメントが100文字以下なら全文表示-->
          <% else %>
          <td style="width: 1%">
            <%=safe_join(review.body.split("\n"),tag(:br))%>
          </td>
          <% end %>
        </tr>
      </table>
    <% end %>
    <% if @customer.name != "guestuser" %>
      <h3 class="col-5 bg-light text-center mt-5">レビューを投稿する</h3>
      <%= render 'public/reviews/form', review: @review, store: @store %>
    <% end %>
  </div>
</div>
