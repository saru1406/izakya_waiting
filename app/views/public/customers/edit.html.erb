<h3 class="bg-light px-3 my-3 d-inline-block">会員情報編集</h3>
<div class="text-danger"><%= flash[:alret] %></div>
<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
<div class='row'>
  <%= render 'public/customers/customer_edit', f: f %>
</div>
<div class='row text-center pb-5'>
  <div class='col-lg-4 col-6'>
    <%= f.submit "編集内容を保存",class: 'btn btn-success' %>
  </div>
  <div class='col-lg-3 col-6'>
    <%= link_to '退会する',customers_information_path, method: :delete, "data-confirm" => "本当に退会しますか？",class: 'btn btn-danger' %>
  </div>
</div>
<% end %>