<h3 class="bg-light border px-3 mb-3 d-inline-block">会員情報編集</h3>
<div class="text-danger"><%= flash[:alret] %></div>
<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
<div class='row'>
  <table class="table table-borderless">
    <tr>
      <td>ニックネーム</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email %></td>
    </tr>
  </table>
</div>
<div class='row text-center pb-5'>
  <div class='col-4'>
    <%= f.submit "編集内容を保存",class: 'btn btn-success' %>
  </div>
  <div class='col-3'>
    <%= link_to '退会する',customers_information_path, method: :delete, "data-confirm" => "本当に退会しますか？",class: 'btn btn-danger' %>
  </div>
</div>
<% end %>