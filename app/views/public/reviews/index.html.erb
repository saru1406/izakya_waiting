<div class="row">
  <div class="col-lg-12 mb-5">
    <h3 class="bg-light px-3 my-3 d-inline-block">レビュー投稿一覧</h3>
    <table class="table table-hover table-responsive-sm text-nowrap">
      <thead>
      <th>評価</th>
      <th>タイトル</th>
      <th>本文</th>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <%= render 'public/reviews/review.star', review: review %>
            <td><%= link_to review.title, store_review_path(review.store_id,review.id) %></td>
            <td><%= safe_join(review.body.split("\n"),tag(:br))%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>