<div class="row">
  <div class="col-lg-12 mb-5">
    <h3 class="bg-light px-3 my-3 d-inline-block">レビュー投稿一覧</h3>
    <% @reviews.each do |review| %>
      <table class="col-lg-12 border border-warning shadow-sm mb-4">
        <tr>
          <td><h5><%= link_to review.store.name, store_path(review.store_id) %></h5></td>
        </tr>
        <tr>
          <%= render 'public/reviews/review.star', review: review %>
        </tr>
        <tr>
          <td class="text-right pr-3">
            <div class="favorite<%= review.id %>">
              <%= render 'public/favorites/favorite', store: review.store_id, review: review, customer: @customer %>
            </div>
            <p>投稿者:<%= review.customer.name %>
            投稿日:<%= review.created_at.strftime('%Y/%m/%d') %></p>
          </td>
        <tr>
          <th><h5><%=link_to review.title, store_review_path(review.store_id,review.id) %></h5></th>
        </tr>
        <tr>
          <td><%= safe_join(review.body.split("\n"),tag(:br))%></td>
        </tr>
        <tr>
          <% if review.review_image.attached? %>
            <td>
              <% review.review_image.each do |review_image| %>
                <%= image_tag review_image, size: "120x120" %>
              <% end %>
            </td>
          <% end %>
        </tr>
      </table>
    <% end %>
  </div>
</div>