<div class="row">
  <div class="col-lg-12 mb-5">
    <h3 class="bg-light border my-3 d-inline-block">会員コメント投稿一覧</h3>
    <table class="table table-hover">
      <thead>
      <th>コメント</th>
      </thead>
      <tbody>
        <% @review_comments.each do |review_comment| %>
          <tr>
            <td><%= link_to review_comment.comment, store_review_path(review_comment.store_id,review_comment.review_id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>