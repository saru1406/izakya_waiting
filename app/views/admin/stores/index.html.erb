<div class="row">
  <h3 class="bg-light border px-3 mb-3 d-inline-block">居酒屋一覧</h3>
  <table class="table table-hover">
    <thead class="thead thead-light">
      <th>居酒屋ID</th>
      <th>店舗名</th>
      <th></th>
    </thead>
    <tbody>
      <% @stores.each do |store| %>
      <tr>
        <td><%= store.id %></td>
        <td><%= link_to store.name, admin_store_path(store.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>