<h3 class="col-2 text-center bg-light border px-3 mb-3 d-inline-block">居酒屋一覧</h3>
<div class="text-success"><%= flash[:notice] %></div>
<table class="table table-hover">
  <thead class="thead thead-light">
    <th>居酒屋ID</th>
    <th>店舗名</th>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
    <tr>
      <td><%= store.id %></td>
      <td><%= link_to store.name, admin_store_path(store.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>