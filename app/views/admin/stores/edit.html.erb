<div class="text-danger"><%= flash[:alret] %></div>
<h3 class="bg-light px-3 my-3 d-inline-block">店舗情報編集</h3>
<%= form_with model: @store, url: admin_store_path, method: :patch do |f| %>
  <%= render 'public_store/stores/store_edit', f: f, tags: @tags %>
<div class="row mb-5">
  <div class='col-lg-3 col-5'>
    <%= f.submit "編集内容を保存",class: 'btn btn-success' %>
  </div>
<% end %>
  <div class='col-lg-3 col-5 pb-5'>
    <%= link_to '強制退会',admin_store_path, method: :delete, "data-confirm" => "本当に退会させますか？",class: 'btn btn-danger' %>
  </div>
</div>