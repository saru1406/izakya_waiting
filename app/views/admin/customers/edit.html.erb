<div class="text-danger"><%= flash[:alret] %></div>
<h3 class="bg-light px-3 my-3 d-inline-block">会員情報編集</h3>
<div class="row mb-3">
  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
    <%= render 'public/customers/customer_edit', f: f %>
</div>
<div class="row pb-5">
  <div class="col-lg-4 col-5">
    <%= f.submit "編集内容を保存",class: 'btn btn-success' %>
  </div>
  <% end %>
  <div class="col-lg-3 col-5">
    <%= link_to '強制退会',admin_customer_path, method: :delete, "data-confirm" => "本当に退会させますか？",class: 'btn btn-danger' %>
  </div>
</div>
