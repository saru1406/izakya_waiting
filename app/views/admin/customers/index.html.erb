<h3 class="col-lg-2 col-7 text-center bg-light border px-3 my-3">会員一覧</h3>
<div class="text-success"><%= flash[:notice] %></div>
<table class="table table-hover">
  <thead class="thead thead-light">
    <th>会員ID</th>
    <th>ニックネーム</th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>