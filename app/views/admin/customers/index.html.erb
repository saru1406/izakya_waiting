<div class="row">
  <h3 class="bg-light border px-3 mb-3 d-inline-block">会員一覧</h3>
  <table class="table table-hover">
    <thead class="thead thead-light">
      <th>会員ID</th>
      <th>ニックネーム</th>
      <th></th>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>