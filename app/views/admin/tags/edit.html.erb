<h3 class="text-center bg-light border px-3 mb-3 d-inline-block">タグ編集</h3>
<div class="text-danger"><%= flash[:alret] %></div>
<div class='row'>
  <div class="col-5 my-4">
    <table class="table table-borderless align-middle">
      <%= form_with model: @tag,url: admin_tag_path,method: :patch do |f| %>
        <tr>
          <td>タグ名</td>
          <td><%= f.text_field :name, class: "form-control" %></td>
          <td><%= f.submit "変更を保存",class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>