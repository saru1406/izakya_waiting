<div class="row pb-5">
  <h3 class="bg-light px-3 my-3 d-inline-block">レビュー投稿一覧</h3>
  <table class="table table-hover">
    <thead class="thead thead-light text-nowrap">
      <th>レビューID</th>
      <th>居酒屋ID</th>
      <th>投稿者</th>
      <th>評価</th>
      <th>タイトル</th>
      <th>本文</th>
      <th></th>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
      <tr>
        <td><%= review.id %></td>
        <td><%= review.store.id %></td>
        <td><%= link_to review.customer.name, admin_customer_path(review.customer.id) %></td>
        <%= render 'public/reviews/review.star', review: review %>
        <td class="text-nowrap"><%= review.title %></td>
        <td><%= safe_join(review.body.split("\n"),tag(:br))%></td>
        <td class="text-nowrap"><%= link_to "削除", admin_review_path(review.id), class: "btn btn-danger", method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>